{#
/**
 * @file gaya_editorial_video.html.twig
 * Default theme implementation to present Gaya Editorial Video default.
 *
 * This template is used when viewing Gaya editorial entity.
 *
 * Available variables:
 * - title: The title of the content
 * - entity_bundle: The bundle of the content
 * - entity_id: The entity_id of the content
 *
 * Elements from field API:
 * - elements.field_ge_title: The title of the content
 * - elements.field_ge_video_id: The video ID
 * - elements.field_ge_video_height: The height of the video
 * - elements.field_ge_video_width: The width of the video
 * - elements.field_ge_video_autohide: The video autohide control ? (2, 1, 0 ?)
 * - elements.field_ge_video_autoplay: The video is autostarted
 * - elements.field_ge_video_provider: The video provider
 *
 * Only for Youtube :
 * - field_ge_video_modestbranding: The logo of youtube is hidden
 *
 * @see template_preprocess_gaya_editorial_entity()
 * @see template_entity()
 *
 * @ingroup themeable
 */
#}
<section class="section section-video">
    {% if elements.field_ge_title|render %}
        <{{ elements.field_ge_title_heading[0] }}>{{ elements.field_ge_title[0] }}</{{ elements.field_ge_title_heading[0] }}>
    {% endif %}
    {% if elements.field_ge_video_provider[0]|render == "Youtube" %}
        <div id="youtube-video--{{ entity_id }}" class="gaya_editorial_video youtube-video" data-attr-video-id="{{ elements.field_ge_video_id[0]|render }}" data-attr-autohide="{{ elements.field_ge_video_autohide[0]|render }}" data-attr-autoplay="{{ elements.field_ge_video_autoplay[0]|render }}" data-attr-height="{{ elements.field_ge_video_height[0]|render }}" data-attr-width="{{ elements.field_ge_video_width[0]|render }}"></div>
    {% elseif elements.field_ge_video_provider[0]|render == "Dailymotion" %}
        <div id="dailymotion-video--{{ entity_id }}" class="gaya_editorial_video dailymotion-video" data-attr-video-id="{{ elements.field_ge_video_id[0]|render }}" data-attr-autohide="{{ elements.field_ge_video_autohide[0]|render }}" data-attr-autoplay="{{ elements.field_ge_video_autoplay[0]|render }}" data-attr-height="{{ elements.field_ge_video_height[0]|render }}" data-attr-width="{{ elements.field_ge_video_width[0]|render }}"></div>
    {% endif %}
</section>
