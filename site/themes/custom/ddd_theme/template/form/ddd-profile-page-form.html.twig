{% if form.surname['#errors'] %}
    {% set error = form.surname['#errors'] %}
<div class="form-group has-error">
    <label for="edit-surname" class="control-label">{{ form.surname['#title'] }} *</label>
    <p id="message-error-surname" class="form-message">{{ error|striptags }}</p>
{% else %}
<div class="form-group">
    <label for="edit-surname" class="control-label">{{form.surname['#title']}} *</label>
{% endif %}
    {{ form.surname }}
</div>

