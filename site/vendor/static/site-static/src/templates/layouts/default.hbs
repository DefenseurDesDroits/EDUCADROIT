<!DOCTYPE html>
<html lang="{{theme.language}}">
<head>
    <meta charset="{{theme.charset}}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{#if page.title}}{{page.title}} | {{/if}}{{theme.name}}</title>
    <meta name="author" content="{{theme.author}}">
    <meta name="description" content="{{theme.description}}">

    <link rel="shortcut icon" type="image/x-icon" href="images/favicon.ico">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">

    <!-- build:css(src) styles/vendor.min.css -->
    <!-- bower:css -->
    <link rel="stylesheet" href="vendor/animate.css/animate.css" />
    <link rel="stylesheet" href="vendor/magnific-popup/dist/magnific-popup.css" />
    <!-- endbower -->
    <!-- endbuild -->

    <!-- build:css(.tmp) styles/theme.min.css -->
    <link rel="stylesheet" href="styles/theme.css">
    <!-- endbuild -->
</head>
<body{{#if page.body_class}} class="{{body_class}}"{{/if}}>

{{> nav }}

<main id="main" class="main">
    <div class="page-container page-container-desktop">
        {{> body }}
    </div>
    {{> page-container-tablet }}
    {{> page-container-mobile }}
</main><!-- .main -->

{{> sidebar-ressources }}
{{> sidebar-nav-episodes }}
{{> cookies-banner }}

<script src="//www.youtube.com/iframe_api"></script>

<!-- build:js(src) scripts/vendor.min.js -->
<!-- bower:js -->
<script src="vendor/jquery/dist/jquery.js"></script>
<script src="vendor/bootstrap-sass/assets/javascripts/bootstrap.js"></script>
<script src="vendor/matchheight/dist/jquery.matchHeight.js"></script>
<script src="vendor/cookies-eu-banner/dist/cookies-eu-banner.js"></script>
<script src="vendor/magnific-popup/dist/jquery.magnific-popup.js"></script>
<!-- endbower -->
<!-- endbuild -->

<!-- build:js(.tmp) scripts/theme.min.js -->
<script src="scripts/theme.js"></script>
<!-- endbuild -->

<!-- build:js(.tmp) scripts/player.min.js -->
<script src="scripts/player.js"></script>
<!-- endbuild -->

<script>
    new CookiesEuBanner(function () { }, true);
</script>

</body>
</html>
